<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram Location Restrictor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Setup Card -->
        <LinearLayout
            android:id="@+id/setupCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initial Setup Required"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/setupProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setup Progress: 0/3 completed"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/locationSetupButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Home Location"
                android:backgroundTint="#2196F3"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/deviceAdminButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Device Admin"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/accessibilityButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Accessibility Service"
                android:backgroundTint="#9C27B0" />

        </LinearLayout>

        <!-- Status Card -->
        <LinearLayout
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/locationStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌍 Checking location..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/dailyUsageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Usage: 0h 0m of 2h 0m"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/remainingTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remaining: 2h 0m"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Emergency Override Section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Override"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/emergencyOverrideStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 emergency overrides remaining this month"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/emergencyOverrideButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use Emergency Override"
                android:backgroundTint="#F44336"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Time Limit Controls Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Time Limit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/timeLimitValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2h 0m"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/timeLimitSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="240"
                android:progress="120"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30m"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4h 0m"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textAlignment="textEnd" />

            </LinearLayout>

        </LinearLayout>

        <!-- Statistics Card -->
        <LinearLayout
            android:id="@+id/statisticsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/totalUsageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Usage: 0h 0m"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/totalBlocksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Blocks: 0"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/averageDailyUsageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Average: 0h 0m per day"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>